<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <IsPackable>false</IsPackable>
    <AssemblyName>GoodToCode.Locality.Specs</AssemblyName>
    <RootNamespace>GoodToCode.Locality.Specs</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Geography\**" />
    <Compile Remove="Geometry\**" />
    <Compile Remove="Location\**" />
    <EmbeddedResource Remove="Geography\**" />
    <EmbeddedResource Remove="Geometry\**" />
    <EmbeddedResource Remove="Location\**" />
    <None Remove="Geography\**" />
    <None Remove="Geometry\**" />
    <None Remove="Location\**" />
    <SpecFlowFeatureFiles Remove="Geography\**" />
    <SpecFlowFeatureFiles Remove="Geometry\**" />
    <SpecFlowFeatureFiles Remove="Location\**" />
    <SpecFlowObsoleteCodeBehindFiles Remove="Geography\**" />
    <SpecFlowObsoleteCodeBehindFiles Remove="Geometry\**" />
    <SpecFlowObsoleteCodeBehindFiles Remove="Location\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="appsettings.Development.json" />
    <None Remove="appsettings.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettings.Development.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GoodToCode.Locality.Domain.Models" Version="5.20.2008.1" />
    <PackageReference Include="GoodToCode.Shared.Specs" Version="5.20.2008.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.7" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.7.1" />
    <PackageReference Include="MSTest.TestAdapter" Version="2.1.2" />
    <PackageReference Include="MSTest.TestFramework" Version="2.1.2" />
    <PackageReference Include="coverlet.collector" Version="1.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="SpecFlow" Version="3.4.3" />
    <PackageReference Include="SpecFlow.Tools.MsBuild.Generation" Version="3.4.3" />
    <PackageReference Include="SpecRun.SpecFlow" Version="3.4.5" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Factories\" />
  </ItemGroup>

</Project>
