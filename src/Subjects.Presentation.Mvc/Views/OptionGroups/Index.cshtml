@model IEnumerable<GoodToCode.Shared.Models.OptionGroup>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OptionGroupKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionGroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionGroupDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionGroupCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OptionGroupKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionGroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionGroupDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionGroupCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OptionGroupId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OptionGroupId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OptionGroupId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
