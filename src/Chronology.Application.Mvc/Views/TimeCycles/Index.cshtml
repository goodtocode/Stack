@model IEnumerable<GoodToCode.Shared.Models.TimeCycle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeCycleKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCycleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCycleDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interval)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCycleKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCycleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCycleDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interval)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TimeCycleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TimeCycleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TimeCycleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
